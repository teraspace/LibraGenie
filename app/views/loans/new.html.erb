<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <%= link_to "← Back to My Loans", loans_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
  </div>

  <div class="bg-white shadow-sm rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">Borrow a Book</h1>
      <p class="mt-1 text-sm text-gray-600">Select a book to borrow and set the due date.</p>
    </div>

    <div class="p-6">
      <%= form_with model: @loan, local: true, class: "space-y-6" do |form| %>
        <% if @loan.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  There were <%= pluralize(@loan.errors.count, "error") %> with your submission:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @loan.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Book Selection -->
        <div>
          <%= form.label :book_id, "Select Book", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <%= form.select :book_id,
                options_from_collection_for_select(@available_books, :id, :display_title, @loan.book_id),
                { prompt: "Choose a book to borrow..." },
                {
                  class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
                  id: "book_select"
                } %>
          </div>
          <p class="mt-1 text-sm text-gray-500">Only available books are shown in this list.</p>
        </div>

        <!-- Selected Book Details -->
        <div id="book_details" class="hidden bg-gray-50 rounded-lg p-4">
          <h4 class="text-sm font-medium text-gray-900 mb-2">Book Details:</h4>
          <div id="book_info"></div>
        </div>

        <!-- Due Date -->
        <div>
          <%= form.label :due_date, "Due Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.date_field :due_date,
              value: @loan.due_date || 2.weeks.from_now.to_date,
              min: Date.current + 1.day,
              max: Date.current + 6.months,
              class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          <p class="mt-1 text-sm text-gray-500">
            Books can be borrowed for up to 6 months. Default is 2 weeks from today.
          </p>
        </div>

        <!-- Loan Terms -->
        <div class="bg-blue-50 rounded-lg p-4">
          <h4 class="text-sm font-medium text-blue-900 mb-2">📚 Loan Terms & Conditions</h4>
          <ul class="text-sm text-blue-800 space-y-1">
            <li>• You can borrow up to 5 books at a time</li>
            <li>• Maximum loan period is 6 months</li>
            <li>• Late returns may result in restrictions</li>
            <li>• Books must be returned in good condition</li>
          </ul>
        </div>

        <!-- Actions -->
        <div class="flex items-center justify-end space-x-3 pt-6 border-t border-gray-200">
          <%= link_to "Cancel", loans_path,
              class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          <%= form.submit "Borrow Book",
              class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500",
              id: "submit_button",
              disabled: true %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Available Books Summary -->
  <div class="mt-8 bg-white shadow-sm rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900">Available Books (<%= @available_books.count %>)</h2>
    </div>
    <div class="p-6">
      <% if @available_books.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% @available_books.limit(6).each do |book| %>
            <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow cursor-pointer book-card"
                 data-book-id="<%= book.id %>"
                 data-book-title="<%= book.title %>"
                 data-book-author="<%= book.author.name %>"
                 data-book-category="<%= book.category.name %>"
                 data-book-isbn="<%= book.isbn %>"
                 data-book-description="<%= book.description %>">
              <h3 class="font-medium text-gray-900 truncate"><%= book.title %></h3>
              <p class="text-sm text-gray-600">by <%= book.author.name %></p>
              <p class="text-xs text-gray-500 mt-1"><%= book.category.name %></p>
            </div>
          <% end %>
        </div>
        <% if @available_books.count > 6 %>
          <p class="mt-4 text-sm text-gray-500">
            And <%= @available_books.count - 6 %> more books available...
          </p>
        <% end %>
      <% else %>
        <p class="text-gray-500">No books are currently available for borrowing.</p>
      <% end %>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const bookSelect = document.getElementById('book_select');
  const bookDetails = document.getElementById('book_details');
  const bookInfo = document.getElementById('book_info');
  const submitButton = document.getElementById('submit_button');
  const bookCards = document.querySelectorAll('.book-card');

  // Function to update book details
  function updateBookDetails() {
    const selectedOption = bookSelect.options[bookSelect.selectedIndex];
    if (selectedOption.value) {
      // Extract book data from the option text or make an AJAX call
      // For now, show basic info
      bookInfo.innerHTML = `
        <p class="text-sm text-gray-600">
          <strong>Selected:</strong> ${selectedOption.text}
        </p>
      `;
      bookDetails.classList.remove('hidden');
      submitButton.disabled = false;
      submitButton.classList.remove('opacity-50');
    } else {
      bookDetails.classList.add('hidden');
      submitButton.disabled = true;
      submitButton.classList.add('opacity-50');
    }
  }

  // Handle book selection from dropdown
  bookSelect.addEventListener('change', updateBookDetails);

  // Handle book selection from cards
  bookCards.forEach(function(card) {
    card.addEventListener('click', function() {
      const bookId = this.dataset.bookId;
      const bookTitle = this.dataset.bookTitle;
      const bookAuthor = this.dataset.bookAuthor;
      const bookCategory = this.dataset.bookCategory;
      const bookDescription = this.dataset.bookDescription;

      // Update select
      bookSelect.value = bookId;

      // Update details
      bookInfo.innerHTML = `
        <div class="space-y-2">
          <p class="font-medium text-gray-900">${bookTitle}</p>
          <p class="text-sm text-gray-600">by ${bookAuthor}</p>
          <p class="text-sm text-gray-500">Category: ${bookCategory}</p>
          <p class="text-sm text-gray-700">${bookDescription}</p>
        </div>
      `;
      bookDetails.classList.remove('hidden');
      submitButton.disabled = false;
      submitButton.classList.remove('opacity-50');

      // Visual feedback
      bookCards.forEach(function(c) { c.classList.remove('ring-2', 'ring-blue-500'); });
      this.classList.add('ring-2', 'ring-blue-500');
    });
  });

  // Initial state
  updateBookDetails();
});
</script>
