<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold text-gray-900">Authors</h1>
    <div class="flex space-x-2">
      <%= link_to "React Version", index_react_authors_path, class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg" %>
      <%= link_to "Add New Author", new_author_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg" %>
      <%= link_to "Add New Author (React)", new_react_authors_path, class: "bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg" %>
    </div>
  </div>

  <!-- Search -->
  <div class="bg-white rounded-lg shadow p-6">
    <%= form_tag authors_path, method: :get, local: true, class: "flex space-x-4" do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search authors...",
          class: "flex-1 border rounded-md px-3 py-2" %>
      <%= submit_tag "Search", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded" %>
      <%= link_to "Clear", authors_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-700 px-4 py-2 rounded" %>
    <% end %>
  </div>

  <!-- Authors Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @authors.each do |author| %>
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
        <h3 class="text-xl font-semibold mb-2">
          <%= link_to author.name, author, class: "text-blue-600 hover:text-blue-800" %>
        </h3>

        <% if author.bio.present? %>
          <p class="text-gray-600 text-sm mb-4 line-clamp-3"><%= truncate(author.bio, length: 100) %></p>
        <% end %>

        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-500"><%= pluralize(author.books.count, 'book') %></span>

          <div class="flex space-x-2">
            <%= link_to "View", author, class: "text-blue-600 hover:text-blue-800 text-sm" %>
            <%= link_to "Edit", edit_author_path(author), class: "text-gray-600 hover:text-gray-800 text-sm" %>
            <%= button_to "Delete", author, method: :delete,
                confirm: "Are you sure?",
                class: "text-red-600 hover:text-red-800 text-sm border-0 bg-transparent p-0" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @authors.empty? %>
    <div class="text-center py-12">
      <p class="text-gray-500 text-lg">No authors found.</p>
      <%= link_to "Add the first author", new_author_path, class: "text-blue-600 hover:text-blue-800" %>
    </div>
  <% end %>
</div>
