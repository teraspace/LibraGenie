<div class="space-y-6">
  <div class="text-center">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Welcome to LibraGenie</h1>
    <p class="text-xl text-gray-600">Your digital library management system</p>
  </div>

  <% if user_signed_in? %>
    <!-- Dashboard Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
      <div class="bg-white rounded-lg p-6 shadow">
        <div class="text-2xl font-bold text-blue-600"><%= @total_books %></div>
        <div class="text-gray-600">Total Books</div>
      </div>
      <div class="bg-white rounded-lg p-6 shadow">
        <div class="text-2xl font-bold text-green-600"><%= @available_books %></div>
        <div class="text-gray-600">Available</div>
      </div>
      <div class="bg-white rounded-lg p-6 shadow">
        <div class="text-2xl font-bold text-orange-600"><%= @borrowed_books %></div>
        <div class="text-gray-600">Borrowed</div>
      </div>
      <div class="bg-white rounded-lg p-6 shadow">
        <div class="text-2xl font-bold text-purple-600"><%= @user_loans.count %></div>
        <div class="text-gray-600">Your Active Loans</div>
      </div>
    </div>

    <!-- Your Current Loans -->
    <% if @user_loans.any? %>
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-2xl font-bold mb-4">Your Current Loans</h2>
        <div class="space-y-3">
          <% @user_loans.each do |loan| %>
            <div class="flex justify-between items-center p-4 border rounded <%= loan.overdue? ? 'bg-red-50 border-red-200' : 'bg-gray-50' %>">
              <div>
                <h3 class="font-semibold"><%= loan.book.title %></h3>
                <p class="text-sm text-gray-600">by <%= loan.book.author.name %></p>
                <p class="text-sm <%= loan.overdue? ? 'text-red-600' : 'text-gray-600' %>">
                  Due: <%= loan.due_date.strftime("%B %d, %Y") %>
                  <% if loan.overdue? %>
                    <span class="font-semibold">(OVERDUE)</span>
                  <% end %>
                </p>
              </div>
              <div class="flex space-x-2">
                <%= link_to "View", loan.book, class: "bg-blue-500 hover:bg-blue-700 text-white px-3 py-1 rounded text-sm" %>
                <%= link_to "Return", return_book_loan_path(loan),
                    method: :patch,
                    class: "bg-green-500 hover:bg-green-700 text-white px-3 py-1 rounded text-sm",
                    confirm: "Are you sure you want to return this book?" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Recent Books -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-bold">Recent Books</h2>
        <div class="flex space-x-2">
          <%= link_to "Books (ERB)", books_path, class: "text-blue-600 hover:text-blue-800 text-sm" %>
          <%= link_to "Books (React)", index_react_books_path, class: "text-green-600 hover:text-green-800 text-sm font-semibold" %>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @recent_books.each do |book| %>
          <div class="border rounded-lg p-4 hover:shadow-md transition-shadow">
            <h3 class="font-semibold text-lg mb-2"><%= link_to book.title, book, class: "text-blue-600 hover:text-blue-800" %></h3>
            <p class="text-gray-600 text-sm mb-1">by <%= book.author.name %></p>
            <p class="text-gray-500 text-sm mb-2"><%= book.category.name %></p>
            <div class="flex justify-between items-center">
              <span class="px-2 py-1 rounded text-xs <%= book.available? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                <%= book.available? ? 'Available' : 'Borrowed' %>
              </span>
              <% if book.available? && current_user.can_borrow_book? %>
                <%= button_to "Borrow", borrow_book_path(book),
                    class: "bg-blue-500 hover:bg-blue-700 text-white px-3 py-1 rounded text-sm border-0" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  <% else %>
    <!-- Not logged in view -->
    <div class="text-center bg-white rounded-lg shadow p-8">
      <h2 class="text-2xl font-bold mb-4">Get Started</h2>
      <p class="text-gray-600 mb-6">Sign up or log in to start managing your library experience</p>
      <div class="space-x-4">
        <%= link_to "Sign Up", new_user_registration_path,
            class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg" %>
        <%= link_to "Log In", new_user_session_path,
            class: "bg-gray-600 hover:bg-gray-700 text-white px-6 py-2 rounded-lg" %>
      </div>
    </div>
  <% end %>
</div>
